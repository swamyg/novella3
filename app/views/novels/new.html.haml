- if @novel.errors.any?
  %ul{:class=>"flash error"}
    - @novel.errors.full_messages.each do |msg|
      %li=msg
%h1 New novel
= rounded_start
%div{:class=>'contentb'}
  -form_for :novel, :url=>{:action=>'create'}, :html => { :multipart => true } do |f|
    %table{:class=>'form', :cellpadding=>'5', :cellspacing=>'2'}
      %tr
        %td
          = f.label :name, 'name'
          %br
          = f.text_field :name, :size => 32
      %tr
        %td
          = f.label :description, 'description'
          %br
          = f.text_area :description, :cols =>30, :rows=>5
      %tr
        %td
          - menu_items.each do |genre|
            = f.radio_button :genre_id,genre.id
            = genre.name
            %br
      %tr
        %td
          = f.file_field :photo
          %br
      %tr
        %td
          =f.submit 'Create'
= rounded_stop          
