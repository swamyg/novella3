%div{:class=>"yui-u first"}
  =render :partial => 'profiles/profile_left.html.haml'
%div{:class=>"yui-u"}
  .heading.large
    %a{:href=>profile_path(@user.login),:class=>'none'}
      =h @user.login
    ="'s novels"
  .break
  -unless @novels.nil?
    .move-left
      -@novels.each_with_index do |novel,idx|
        -idx+=1
        .medium
          =link_to idx.to_s+". "+novel.name, perma_link_path(novel.perma_link), :class=>'normal tall'    
  .break
